<!-- Modal -->
<div class="modal-dialog">
  <div class="modal-content">
    <!-- modal header -->
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">New Contract</h4>
      <% if @error_messages %>
        <% @error_messages.each do |err| %>
          <p class="text-danger"><%= err %></p>
        <% end %>
      <% end %>
    </div>
    <!-- modal body -->
    <div class="modal-body">
      <div class="form">
        <%= form_for :contract, url: contracts_path do |f| %>
          <div class="form-group">
            <%= f.label :title %><br>
            <%= f.text_field :title, placeholder: "Contract Title", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :theme %><br>
            <%= f.text_field :theme, placeholder: "Contract Theme", class: "form-control" %>
          </div>
          <div class="text-right"><%= f.submit class: "btn btn-primary"%></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
