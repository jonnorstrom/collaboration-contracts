<div class="container">
  <h1 class="text-center">New Contract</h1>

  <div class="container mx-auto max-width-500">
    <% if @error_messages %>
      <% @error_messages.each do |err| %>
        <p class="text-danger"><%= err %></p>
      <% end %>
    <% end %>``
    <%= form_for :contract, url: contracts_path do |f| %>

      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, placeholder: "Contract Title", class: "form-control", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :theme %><br>
        <%= f.text_field :theme, placeholder: "Contract Theme", class: "form-control" %>
      </div>

      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
