
<div class="row col-sm-10 col-sm-offset-1 col-sm-offset-right-1 contract-header">

  <div class="row">
    <div class="text-center col-xs-4">
      <%=render 'contracts/button'%>
      <%if @owner%> <%=render 'contracts/owner_button'%> <%end%>
    </div>
    <h2 class="col-xs-4 text-center"><%=@contract.title%></h2>
    <%if @owner%>
      <%@contract.reviewable ? @status = "ON" : @status = "OFF"%>
      <h5 class="col-xs-4 text-center">Team Review is <%=link_to @status, contracts_update_path(:id=>@contract.id, :link=>@contract.owner_link), :method=>:post%></h5>
    <%end%>
  </div>

  <div class="row">
    <p class="text-center"><%=@contract.theme%></p>
  </div>

</div>


<%if @contract.decisions %>
    <%= render 'decisions/show', :@decisions => @contract.decisions, :@user => @user %>
<%end%>

<!-- <%= link_to "Add Decision", decisions_new_path(:contract_id => @contract.id), :class => "btn btn-primary btn-lg col-xs-4 col-xs-offset-4"%> -->

<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-primary btn-lg col-sm-4 col-sm-offset-4" data-toggle="modal" data-target="#decisionModal">Add Decision</button>
<!-- Modal -->
<div id="decisionModal" class="modal fade" role="dialog">
  <%= render 'decisions/new_modal', :@contract_id => @contract.id %>
</div>
