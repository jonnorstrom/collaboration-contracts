
<div class="row col-xs-10 col-xs-offset-1 col-xs-offset-right-1 contract-header">

  <div class="row">
    <div class="col-sm-4">
      <%=render 'contracts/button'%>
      <%if @owner%> <%=render 'contracts/owner_button'%> <%end%>
    </div>
    <h2 class="col-sm-4 text-center"><%=@contract.title%></h2>
    <%if @owner%>
      <%@contract.reviewable ? @status = "ON" : @status = "OFF"%>
      <h5>Team Review is <%=link_to @status, contracts_update_path(:id=>@contract.id, :link=>@contract.owner_link), :method=>:post%></h5>
    <%end%>
  </div>

  <div class="row">
    <p class="text-center"><%=@contract.theme%></p>
  </div>

</div>


<%if @contract.decisions %>
    <%= render 'decisions/show', :@decisions => @contract.decisions, :@user => @user %>
<%end%>

<%= link_to "Add Decision", decisions_new_path(:contract_id => @contract.id), :class => "btn btn-primary btn-lg col-sm-4 col-sm-offset-4"%>
