
<div class="row col-xs-10 col-xs-offset-1 col-xs-offset-right-1 contract-header">
  <div class="col-sm-4">
    <nobr>
      <p class="" id="link_text"><b>Link:</b> /contracts/<%=@contract.id%>/<%=@contract.link%>
        <button class="btn btn-xs clip" data-clipboard-text="localhost:3000/contracts/<%=@contract.id%>/<%=@contract.link%>">
          <%= image_tag("clippy.svg", size: "15x15")%>
        </button>
      </p>
    </nobr>
    <%if @is_owner%>
      <nobr>
        <p class="" id="link_text"><b>Owner Link:</b> /contracts/<%=@contract.id%>/<%=@contract.owner_link%>
          <button class="btn btn-xs clip" data-clipboard-text="localhost:3000/contracts/<%=@contract.id%>/<%=@contract.owner_link%>">
            <%= image_tag("clippy.svg", size: "15x15")%>
          </button>
        </p>
      </nobr>
    <%end%>
  </div>
  <h2 class=" col-sm-4 text-center"><%=@contract.title%></h2>
  <%if @is_owner%>
    <h1>.</h1>
  <%end%>
</div>




<%if @contract.decisions %>
    <%= render 'decisions/show', :@decisions => @contract.decisions %>
<%end%>

<%= link_to "Add Decision", decisions_new_path(:contract_id => @contract.id), :class => "btn btn-primary btn-lg col-sm-4 col-sm-offset-4"%>
