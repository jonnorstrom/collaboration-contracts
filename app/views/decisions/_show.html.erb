<%if @decisions%>
  <%=render partial: 'decisions/table'%>
  <%@decisions.each do |decision|%>
    <div class="data-row col-xs-10 col-xs-offset-1 col-xs-offset-right-1">
      <div class="col-xs-2"><%=link_to decision.description, new_answers_path(:decision_id => decision.id), class: "text-center"%></div>
      <%if decision.answers%>
      <!-- make some sort of viewable? method that checks if its up for review or you are the owner-->
          <div class="col-xs-2"><%=Answer.find_all_names("Explain", decision.id, session[:user_id], session[:name])%></div>
          <div class="col-xs-2"><%=Answer.find_all_names("Consult", decision.id, session[:user_id], session[:name])%></div>
          <div class="col-xs-2"><%=Answer.find_all_names("Agree", decision.id, session[:user_id], session[:name])%></div>
          <div class="col-xs-2"><%=Answer.find_all_names("Advise", decision.id, session[:user_id], session[:name])%></div>
          <div class="col-xs-2"><%=Answer.find_all_names("Inquire", decision.id, session[:user_id], session[:name])%></div>
      <%end%>
    </div>
  <%end%>
<%end%>
