<!-- Modal -->
<div class="modal-dialog">
  <div class="modal-content">
    <!-- modal header -->
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title text-center"><%= @decision.description %></h4>
    </div>
  <!-- modal body/form -->
    <div class="modal-body">
      <div class="form">
        <%= form_for :answer, url: answers_path do |f| %>
          <!-- get user name -->
          <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <%= f.hidden_field :user_id, :value => current_user.id, required: true %>
            </div>
          </div>
          <!-- table header -->
          <%= render partial: 'decisions/table_modal_header' %>
          <!-- answers radio btns -->
          <div class="row" id="answer_buttons">
            <div class="col-xs-1"></div>
            <% Answer.types.each do |type| %>
              <div class="col-xs-2 text-center"><%= f.radio_button :answer,type, :checked => @decision.user_answer_type?(type, current_user), required: true %></div>
            <% end %>
            <div class="col-xs-1"></div>
            <%= f.hidden_field :decision_id, :value => @decision.id %>
          </div>
          <!-- submit btn -->
          <div class="text-right"><%= f.submit class: "btn btn-primary" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
